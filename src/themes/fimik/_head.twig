<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
<title>{% if meta.title %}{{ meta.title }} | {% endif %}{{ site_title }}</title>

{% if meta.description %}
    <meta name="description" content="{{ meta.description|striptags }}" />
{% endif %}

{% if meta.robots %}
    <meta name="robots" content="{{ meta.robots }}" />
{% endif %}

{% if current_page %}
    <link rel="canonical" href="{{ current_page.url }}" />
{% endif %}

<link rel="SHORTCUT ICON" href="{{ theme_url }}/logo/logo.ico"/>

<link rel="stylesheet" href="{{ theme_url }}/css/config.css" type="text/css" />
<link rel="stylesheet" href="{{ theme_url }}/css/layout.css" type="text/css" />
<link rel="stylesheet" href="{{ theme_url }}/css/layout-small.css" type="text/css" />
<link rel="stylesheet" href="{{ theme_url }}/css/droidsans.css" type="text/css" />
<link rel="stylesheet" href="{{ theme_url }}/css/fontello.css" type="text/css" />